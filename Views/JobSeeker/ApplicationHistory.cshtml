@model List<dynamic>
@{
    ViewData["Title"] = "Application History";
}
<a asp-action="Dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
<h2>Application History</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Status</th>
            <th>Applied Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.JobTitle</td>
                <td>@app.Status</td>
                <td>@app.AppliedDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
